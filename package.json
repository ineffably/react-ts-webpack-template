{
  "name": "react-ts-webpack-template",
  "version": "1.0.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --mode production",
    "build:clean": "npm run clean && npm run build",
    "build:clean:prod": "npm run clean && npm run build:prod",
    "clean": "rimraf ./lib",
    "local": "webpack serve",
    "test": "jest --config ./jest.config.js --collect-coverage",
    "watch": "webpack watch --mode development"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack",
    "jest",
    "state-provider",
    "react context",
    "react-router"
  ],
  "author": "Chad Neff",
  "license": "MIT",
  "description": "A template for most of my client-side SPA projects using React, TypeScript, Jest and Webpack. 'non-monorepo'",
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1"
  }
}
